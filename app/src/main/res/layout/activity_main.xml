<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/tvResName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Restaurant Name"
        android:textSize="20sp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvResType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Restaurant Type"
        android:background="@drawable/shape"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:text="Phone Number"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvResAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Restaurant Address"
        android:background="@drawable/shape"
        android:maxLines="2"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvResDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Restaurant Details"
        android:background="@drawable/shape"
        android:textSize="10sp"
        android:maxLines="3"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvResReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginTop="15dp"
        android:text="Restaurant Reviews"
        android:maxLines="2"
        android:textSize="10sp"
        android:gravity="center"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Restaurant"
        android:background="@drawable/shape"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="40dp"/>

</LinearLayout>